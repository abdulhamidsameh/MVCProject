@model EmployeeViewModel
@inject IUnitOfWork _unitofwork;
@{
    var Department = new SelectList(_unitofwork.Repository<Department>().GetAll(), "Id", "Name");
}

<div asp-validation-summary="ModelOnly"></div>

<div class="form-group">
    <label class="col-form-label" asp-for="Name"></label>
    <input asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
</div>

<div class="form-group">
    <label class="col-form-label" asp-for="Email"></label>
    <input asp-for="Email" class="form-control" />
    <span asp-validation-for="Email" class="text-danger"></span>
</div>

<div class="form-group">
    <label class="col-form-label" asp-for="Address"></label>
    <input asp-for="Address" class="form-control" />
    <span asp-validation-for="Address" class="text-danger"></span>
</div>

<div class="form-group">
    <label class="col-form-label" asp-for="Age"></label>
    <input asp-for="Age" class="form-control" />
    <span asp-validation-for="Age" class="text-danger"></span>
</div>

<div class="form-group">
    <label class="col-form-label" asp-for="Salary"></label>
    <input asp-for="Salary" class="form-control" />
    <span asp-validation-for="Salary" class="text-danger"></span>
</div>

<div class="form-group">
    <label class="col-form-label" asp-for="Gender"></label>
    <select class="form-control" asp-for="Gender">
        <option value="@null">--Select Gender--</option>
        <option value="@Gender.Male">Male</option>
        <option value="@Gender.Female">Female</option>
    </select>
    
    <span asp-validation-for="Gender" class="text-danger"></span>
</div>

<div class="form-group ">
    <input asp-for="IsActive" class="form-check-input" />
    <label class="col-form-label" asp-for="IsActive"></label>
</div>

<div class="form-group">
    <label class="col-form-label" asp-for="HiringDate"></label>
    <input asp-for="HiringDate" class="form-control" />
</div>

<div class="form-group">
    <label class="col-form-label" asp-for="Department"></label>
    <select class="form-control" asp-for="DepartmentId" asp-items="@Department">
        <option value="@null">--Select Department--</option>
    </select>
</div>

<div class="form-group">
    <label class="col-form-label" asp-for="Image"></label>
    <input asp-for="Image" class="form-control" />
</div>

<div class="form-group">
    <label class="col-form-label" asp-for="Video"></label>
    <input asp-for="Video" class="form-control" />
</div>

<div class="form-group">
    <label class="col-form-label" asp-for="Pdf"></label>
    <input asp-for="Pdf" class="form-control" />
</div>
